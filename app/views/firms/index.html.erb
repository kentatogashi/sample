<%- model_class = Firm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:telephone) %></th>
      <th><%= model_class.human_attribute_name(:business) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <style>
.middle{
    width: 30%;
}
  </style>
  <tbody>
    <% @firms.each do |firm| %>
      <tr>
        <td><%= link_to firm.id, firm_path(firm) %></td>
        <td><%= firm.name %></td>
        <td><%= firm.address %></td>
        <td><%= firm.telephone %></td>
        <td><%= firm.business %></td>
        <td><%= firm.note %></td>
        <td><%= firm.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      firm_path(firm), :class => 'btn btn-info btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_firm_path(firm), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      firm_path(firm),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_firm_path,
            :class => 'btn btn-primary' %>
