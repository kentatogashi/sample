<style>
#smartphone {
  background: #fff;
  width: 240px;
  margin: 40px auto;
  height: 400px;
  border-top: 30px solid black;
  border-bottom: 30px solid black;
  border-left: 14px solid black;
  border-right: 14px solid black;
  border-radius: 14px;
  position: relative;
}

#smartphone:before {
  content: "";
  display: block;
  position: absolute;
  top: -18px;
  left: 50%;
  margin-left: -10px;
  background: inherit;
  height: 5px;
  width: 24px;
  border-radius: 4px;
}

#smartphone:after {
  content: "";
  display: block;
  position: absolute;
  bottom: -22px;
  left: 50%;
  margin-left: -6px;
  background: inherit;
  width: 16px;
  height: 16px;
  border-radius: 50%;
}

#menu {
  list-style: none;
  width: 100%;
  padding: 0;
  margin: 0 auto;
}

#menu li {
  width: 100%;
  margin: 0;
  padding: 0;
  border-bottom: 1px solid #879c18;
}

#menu li:last-child {
  border-bottom: 0px;
}

#menu li a {
  position: relative;
  display: block;
  margin: 0;
  padding: 10px;
  background: #BED9C2;
  color: #fff;
  font-weight: bold;
  text-decoration: none;
}

#menu li a:before {
  display: block;
  content: "";
  position: absolute;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  top: 50%;
  right: 35px;
  width: 10px;
  height: 10px;
  margin-top: -4px;
  background: #fff;
}

#menu li a:after {
  display: block;
  content: "";
  position: absolute;
  top: 50%;
  right: 40px;
  width: 10px;
  height: 10px;
  margin-top: -4px;
  background: #BED9C2;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

#icon-wrapper {
  width: 100%;
  position: relative;
}

#icon-wrapper-inner {
  height: 120px;
  margin: 0 auto;
  padding-left: 78px;
  padding-top: 30px;
  background: #99CC99;
}

#icon {
  font-size: 48px;
  margin-left: -8px;
  top: 0.5em;
  border-radius: 0.7em 0.7em 0 0;
  background: #2C2C2C;
  width: 1.5em;
  height: 0.8em;
  position: relative;
  margin-top: 10px;
}

#icon:before {
  position: absolute;
  content: "";
  top: -0.9em;
  left: 0.38em;
  width: 0.8em;
  height: 0.85em;
  border-radius: 50%;
  background: #2C2C2C;
}

#icon_img {
  text-align: center;
}

</style>

<%- model_class = Firm -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<div class="row">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @firm.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:president) %>:</strong></dt>
  <dd><%= @firm.president %></dd>
  <dt><strong><%= model_class.human_attribute_name(:icon) %>:</strong></dt>
  <dd><%= image_tag icon_firm_path(@firm), size: "120x120" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @firm.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @firm.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telephone) %>:</strong></dt>
  <dd><%= @firm.telephone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:business) %>:</strong></dt>
  <dd><%= @firm.business %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @firm.note %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              firms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_firm_path(@firm), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              firm_path(@firm),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
</div>

<div class="row">
  <div id="smartphone">
    <div id="icon-wrapper">
      <div id="icon-wrapper-inner">
        <% if @firm.icon %>
          <div id="icon_img">
        <%= image_tag icon_firm_path(@firm), size: "120x120" %>
      </div>
      <% else %>
          <div id="icon"></div>
      <% end %>
      </div>
    </div>
    <ul id="menu">
      <li><a href ="#">President: <%= @firm.president %></a></li>
      <li><a href ="#">Company: <%= @firm.name %></a></li>
      <li><a href ="#">Business: <%= @firm.business %></a></li>
      <li><a href ="#">Address: <%= @firm.address %></a></li>
      <li><a href ="#">Tel: <%= @firm.telephone %></a></li>
    </ul>
  </div>
</div>

