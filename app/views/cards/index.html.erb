<html>
<body>
<head>
<meta name="viewport" content="width=width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
<meta name="format-detection" content="telephone=no">
</head>
<style>
div#card-wrapper {
  position: relative;
  margin: 0 auto;
  width: 100%;
  height: 480px;
  #border: 1px solid #000;
  background-color: #F8F8F8;
}

div#card-background {
  text-align: center;
  position: relative;
  #background-image: url('wood-background.jpg');
  #border: 1px solid #000;
  background-color: #E8E8E8;
}

div#top-part {
  #border: 1px solid #000;
  background-color: #D8D8D8;
}

#image img {
  border: 1px solid #D8D8D8;
  border-radius: 50%;
  box-shadow: 1px 1px 10px 1px;
  margin-bottom: 10px;
}
#president span{
  font-size: 22px;
}

#company span{
  font-size: 18px;
  }
#middle-part {
  background-color: #C8C8C8;
  font-size: 18px;
}
</style>
<div id="card-wrapper">
  <div id="card-background">
    <p>BACKGROUND</p>
    <div id="top-part">
      <p>TOPPART</p>
      <div id="image"><%= image_tag icon_firm_path(@card[0]), size: "160x160" %></div>
      <div id="president"><span>President: <%= @card[0].president %></span></div>
      <div id="company"><span>@<%= @card[0].name %></span></div>
    </div>
    <div id="middle-part">
      <p>MIDDLEPART</p>
      <p>Address: <%= @card[0].address %></p>
      <p>Telephone: <%= @card[0].telephone %></p>
      <p>Mail: dummy@example.com</p>
    </div>
  </div>
</div>
</body>
</html>
